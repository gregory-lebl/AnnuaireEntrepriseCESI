<Window x:Class="AnnuaireEntrepriseCESI.Views.AdminViews.AdminSite.AddSite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnnuaireEntrepriseCESI.Views.AdminViews.AdminSite"
        mc:Ignorable="d"
        Title="AddSite" Height="450" Width="800">
    <Grid>
        <Label Content="Nom du site" HorizontalAlignment="Left" Margin="251,111,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SiteName" HorizontalAlignment="Center" Margin="0,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="20"/>
        <Label Content="Description du site" HorizontalAlignment="Left" Margin="252,171,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="SiteDescription" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="300" Height="40"/>
        <Button x:Name="SaveSite" Content="Enregistrer" HorizontalAlignment="Left" Margin="367,256,0,0" VerticalAlignment="Top" Click="SaveSite_Click"/>
    </Grid>
</Window>
